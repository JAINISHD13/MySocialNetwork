<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jainishadabhi.mysocialnetwork.Activity.RegisterActivity"
    android:background="@drawable/backimage"
    >

    <TextView
        android:id="@+id/register_appLabel"
        android:layout_width="match_parent"
        android:textSize="50dp"
        android:text="Sac State Social"
        android:fontFamily="cursive"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_appLabel"
        android:layout_marginTop="20dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_email"
        android:layout_marginTop="5dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <EditText
        android:id="@+id/register_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/register_password"
        android:layout_alignRight="@+id/register_password"
        android:layout_below="@+id/register_password"
        android:layout_marginTop="5dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="First Name"
        android:padding="20dp" />

    <EditText
        android:id="@+id/register_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_firstname"
        android:layout_marginTop="5dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="Last Name"
        android:padding="20dp" />

    <EditText
        android:id="@+id/register_contactNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_lastname"
        android:layout_marginTop="5dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="Contact No"
        android:padding="20dp" />



    <Button
        android:id="@+id/register_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_contactNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:padding="15dp"
        android:layout_marginLeft="100dp"
        android:text="Create Account"
        android:textColor="@android:color/white"
        android:textSize="20dp" />
</RelativeLayout>
